<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="251dp">
        <!-- Fake camera preview (static image) -->
        <ImageView
            android:id="@+id/fakeCameraPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cam"
            android:scaleType="centerCrop"
            android:contentDescription="Fake camera feed"/>
        <!-- Student list overlay (bottom‑left) -->
        <LinearLayout
            android:id="@+id/studentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#66000000"
            android:layout_marginBottom="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinky Gupta S"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>




    </LinearLayout>
        <!-- “Request permission” button (bottom‑center) -->

        <Button
            android:id="@+id/btnRequestPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Permission"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>